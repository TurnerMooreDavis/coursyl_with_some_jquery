<div id='myModal<%= "#{assignment.id}" %>', class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel"><%= assignment.name %></h3>
  </div>
  <div class="modal-body">
    <%= form_for(assignment) do |f| %>
    <div>
      <%= f.label :active_at %>
      <%= f.date_field :active_at %>
    </div>
    <div>
      <%= f.label :due_at %>
      <%= f.date_field :due_at %>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      <%= f.submit "Save", class: "btn btn-primery"  %>
    </div>
    <% end %>
  </div>
</div>
